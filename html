                <button class="nav-button" onclick="goToSlide('slide-16')">⬅ Business Case Cálculos</button>
                <button class="nav-button" onclick="goToSlide('slide-8')">Casos Situacionales ➡</button>
                <button class="nav-button" onclick="goToSlide('slide-1')">🔄 Inicio</button>
                <button class="nav-button" onclick="goToSlide('slide-2')">📋 Agenda</button>
            </div>
        </div>
    </div>

    <script>
        // Función de navegación principal
        function goToSlide(slideId) {
            console.log('Navegando a:', slideId);
            
            // Encontrar el slide de destino
            const targetSlide = document.getElementById(slideId);
            
            if (targetSlide) {
                // Aplicar efecto de animación al slide actual
                const currentSlide = getCurrentSlide();
                if (currentSlide) {
                    currentSlide.style.opacity = '0.7';
                    currentSlide.style.transform = 'translateX(-10px)';
                }
                
                // Scroll suave hacia el slide
                targetSlide.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
                
                // Animar el slide de destino
                setTimeout(() => {
                    targetSlide.classList.add('slide-animate');
                    targetSlide.style.opacity = '1';
                    targetSlide.style.transform = 'translateX(0)';
                    
                    // Limpiar efectos después de la animación
                    setTimeout(() => {
                        targetSlide.classList.remove('slide-animate');
                        if (currentSlide) {
                            currentSlide.style.opacity = '';
                            currentSlide.style.transform = '';
                        }
                    }, 600);
                }, 200);
                
            } else {
                console.error('Slide no encontrado:', slideId);
            }
        }

        // Función para obtener el slide actual visible
        function getCurrentSlide() {
            const slides = document.querySelectorAll('.slide');
            const scrollPosition = window.pageYOffset + window.innerHeight / 2;
            
            for (let slide of slides) {
                const slideTop = slide.offsetTop;
                const slideBottom = slideTop + slide.offsetHeight;
                
                if (scrollPosition >= slideTop && scrollPosition <= slideBottom) {
                    return slide;
                }
            }
            return null;
        }

        // Inicializar efectos cuando la página carga
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Presentación inicializada');
            
            // Agregar efectos hover a todos los botones
            const buttons = document.querySelectorAll('.nav-button, .agenda-item');
            
            buttons.forEach((button, index) => {
                // Animación de entrada escalonada
                button.style.opacity = '0';
                button.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    button.style.transition = 'all 0.5s ease-out';
                    button.style.opacity = '1';
                    button.style.transform = 'translateY(0)';
                }, index * 100);
                
                // Efectos de interacción
                button.addEventListener('click', function() {
                    this.classList.add('button-pulse');
                    setTimeout(() => {
                        this.classList.remove('button-pulse');
                    }, 300);
                });
                
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px) scale(1.05)';
                    this.style.boxShadow = '0 15px 30px rgba(100, 57, 253, 0.4)';
                });
                
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                    this.style.boxShadow = '';
                });
            });
        });

        // Detectar teclas de navegación (opcional)
        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowRight' || e.key === ' ') {
                // Ir al siguiente slide
                const currentSlide = getCurrentSlide();
                if (currentSlide) {
                    const slideId = currentSlide.id;
                    const slideNumber = parseInt(slideId.split('-')[1]);
                    const nextSlideId = 'slide-' + (slideNumber + 1);
                    
                    if (document.getElementById(nextSlideId)) {
                        goToSlide(nextSlideId);
                    }
                }
            } else if (e.key === 'ArrowLeft') {
                // Ir al slide anterior
                const currentSlide = getCurrentSlide();
                if (currentSlide) {
                    const slideId = currentSlide.id;
                    const slideNumber = parseInt(slideId.split('-')[1]);
                    const prevSlideId = 'slide-' + (slideNumber - 1);
                    
                    if (document.getElementById(prevSlideId)) {
                        goToSlide(prevSlideId);
                    }
                }
            }
        });
    </script>
</body>
</html>
